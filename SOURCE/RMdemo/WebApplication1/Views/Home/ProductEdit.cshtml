@model WebApplication1.Models.ProductModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductEdit</title>
</head>
<body>
    <div>
        <form action="ProductSave" method="post">
            <input id="btCancel" type="button" value="🡄" onclick="@("window.location.href='" + @Url.Action("Product", "home")+"'");" />
            <input id="btSave" type="submit" value="💾" />
            <input id="hdid" name="hdid" type="hidden" value="@Model.Selected.ProductID" />
            <table class="table table-bordered table-responsive table-hover">
                <tr><td>Description:</td><td><input id="tbDescription" name="tbDescription" type="text" value="@Model.Selected.Description" /></td></tr>
                <tr><td>Code:</td><td><input id="tbCode" name="tbCode" type="text" value="@Model.Selected.Code" /></td></tr>
                <tr>
                    <td>Type:</td>
                    <td>
                        @Html.DropDownList(
                            "ddlType",
                            new SelectList(Model.Types, "TypeID", "Description", Model.Selected.TypeID),
                            new { @class = "form-control" })
                    </td>
                </tr>
                <tr><td>Amount:</td><td><input id="tbAmount" name="tbAmount" type="text" value="@Model.Selected.Amount" /></td></tr>
                <tr><td>Price:</td><td><input id="tbPrice" name="tbPrice" type="text" value="@Model.Selected.Price" /></td></tr>
            </table>
        </form>
    </div>
</body>
</html>
